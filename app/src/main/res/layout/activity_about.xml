<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="cc.kafuu.bilidownload.viewmodel.activity.AboutViewModel" />

        <import type="cc.kafuu.bilidownload.common.utils.CommonLibs"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/iv_back_text"
                android:src="@drawable/ic_arrow_back_2" />

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingHorizontal="130dp"
                android:text="@string/iv_about_title_text"
                android:textColor="@android:color/black"
                android:textSize="21sp" />

        </androidx.appcompat.widget.Toolbar>

        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="-1dp"
            android:background="#DEE1E0"
            android:padding="2dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <RelativeLayout
                android:id="@+id/rv_about_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shape_table_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="@string/invitation"
                    android:textSize="17sp" />

                <include layout="@layout/include_arrow_button"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:id="@+id/rv_about_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shape_table_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="@string/about_version"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:text="@{CommonLibs.INSTANCE.getVersionName()}"
                    tools:text="1.0.0" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:id="@+id/rv_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shape_table_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="@string/about_license"
                    android:textSize="17sp" />

                <include layout="@layout/include_arrow_button"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:id="@+id/rv_web_diagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shape_table_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="@string/about_diagnosis"
                    android:textSize="17sp" />

                <include layout="@layout/include_arrow_button"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:id="@+id/rv_build_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shape_table_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="@string/about_build_id"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_build_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    tools:text="kafuuNeko" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:id="@+id/rv_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shape_table_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="@string/about_instruction"
                    android:textSize="17sp" />

                <include layout="@layout/include_arrow_button"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:id="@+id/rv_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_shape_table_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="@string/grade"
                    android:textSize="17sp" />

                <include layout="@layout/include_arrow_button"/>

            </RelativeLayout>
        </TableLayout>

    </RelativeLayout>
</layout>